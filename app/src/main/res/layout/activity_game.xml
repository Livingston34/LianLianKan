<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_game"
    tools:context="person.livingston.lianliankan.GameActivity">

    <RelativeLayout
        android:id="@+id/top_control_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/leave_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60" />

        <Button
            android:id="@+id/start_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1" />
    </RelativeLayout>

    <person.livingston.lianliankan.widget.GameView
        android:id="@+id/play_game_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_control_rl" />

</RelativeLayout>
