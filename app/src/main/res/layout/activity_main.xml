<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="person.livingston.lianliankan.MainActivity">

    <Button
        android:id="@+id/simple_game_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单" />

    <Button
        android:id="@+id/general_game_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simple_game_btn"
        android:text="中等" />

    <Button
        android:id="@+id/difficulty_game_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/general_game_btn"
        android:text="困难" />

</RelativeLayout>
